<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox prefHeight="550.0" prefWidth="650.0" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.agendacrud.controller.DireccionesController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox spacing="5.0">
        <Label text="Gestión de Direcciones" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <HBox spacing="5.0">
            <Label text="Domicilios de:" textFill="#7f8c8d">
                <font> <Font size="14.0" /> </font>
            </Label>
            <Label fx:id="lblNombrePersona" text="Cargando..." textFill="#34495e">
                <font> <Font name="System Bold" size="14.0" /> </font>
            </Label>
        </HBox>
    </VBox>

    <VBox spacing="15.0" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;">

        <VBox spacing="5.0">
            <Label text="Vincular dirección existente (varias personas, misma casa):" textFill="#7f8c8d">
                <font> <Font name="System Italic" size="11.0" /> </font>
            </Label>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <ComboBox fx:id="comboDirecciones" maxWidth="Infinity" promptText="Selecciona una dirección..." HBox.hgrow="ALWAYS" />
                <Button onAction="#onVincularExistenteClick" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="Vincular" textFill="WHITE">
                    <font> <Font name="System Bold" size="12.0" /> </font>
                </Button>
            </HBox>
        </VBox>

        <Separator />

        <VBox spacing="5.0">
            <Label fx:id="lblModoEdicion" text="Crear nueva dirección o editar seleccionada:" textFill="#7f8c8d">
                <font> <Font name="System Italic" size="11.0" /> </font>
            </Label>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <TextField fx:id="txtDireccionManual" promptText="Calle, número, colonia..." HBox.hgrow="ALWAYS" />
                <Button fx:id="btnGuardar" onAction="#onGuardarDireccionClick" style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="Guardar" textFill="WHITE">
                    <font> <Font name="System Bold" size="12.0" /> </font>
                </Button>
                <Button fx:id="btnCancelar" onAction="#onCancelarEdicionClick" style="-fx-background-color: #e74c3c; -fx-cursor: hand;" text="Cancelar" visible="false" textFill="WHITE" />
            </HBox>
        </VBox>
    </VBox>

    <TableView fx:id="tablaDirecciones" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" maxWidth="60.0" minWidth="50.0" prefWidth="55.0" text="ID" />
            <TableColumn fx:id="colDetalle" minWidth="300.0" prefWidth="350.0" text="Dirección Completa" />
            <TableColumn fx:id="colAcciones" maxWidth="150.0" minWidth="120.0" prefWidth="130.0" text="Acciones" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button onAction="#onCerrarClick" style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Cerrar Ventana" textFill="WHITE" />
    </HBox>
</VBox>