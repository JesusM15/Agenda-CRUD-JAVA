<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="850.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.agendacrud.controller.HelloController">

  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Label text="Gesti贸n de Agenda" textFill="#2c3e50">
    <font>
      <Font name="System Bold" size="26.0" />
    </font>
  </Label>

  <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 5;">
    <children>
      <TextField fx:id="txtNombre" promptText="Nombre completo" HBox.hgrow="ALWAYS" />
      <TextField fx:id="txtDireccion" promptText="Direcci贸n (Calle, Ciudad...)" HBox.hgrow="ALWAYS" />
      <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#onGuardarClick" prefWidth="130.0"
              style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="Crear Contacto" textFill="WHITE">
        <font>
          <Font name="System Bold" size="12.0" />
        </font>
      </Button>
      <Button fx:id="btnCancelar" onAction="#onCancelarEdicionClick"
              text="Cancelar" visible="false"
              style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-cursor: hand;" />
    </children>
  </HBox>

  <TableView fx:id="tablaPersonas" VBox.vgrow="ALWAYS">
    <columns>
      <TableColumn fx:id="colId" maxWidth="60.0" minWidth="50.0" prefWidth="55.0" text="ID" />
      <TableColumn fx:id="colNombre" minWidth="150.0" prefWidth="250.0" text="Nombre del Contacto" />

      <TableColumn fx:id="colDireccion" minWidth="150.0" prefWidth="250.0" text="Direcci贸n" />

      <TableColumn fx:id="colAcciones" maxWidth="200.0" minWidth="150.0" prefWidth="180.0" text="Gesti贸n" />
    </columns>
    <columnResizePolicy>
      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
  </TableView>



</VBox>