<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="500.0" spacing="15.0"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.agendacrud.controller.TelefonosController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <VBox spacing="5.0">
        <Label text="Gestión de Teléfonos" textFill="#2c3e50">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <HBox spacing="5.0">
            <Label text="Contactos de:" textFill="#7f8c8d">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <Label fx:id="lblNombrePersona" text="Nombre Persona" textFill="#34495e">
                <font>
                    <Font name="System Bold" size="14.0" />
                </font>
            </Label>
        </HBox>
    </VBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f8f9fa; -fx-padding: 10; -fx-background-radius: 5;">
        <children>
            <TextField fx:id="txtTelefono" promptText="Escribe el número aquí..." HBox.hgrow="ALWAYS" />
            <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#onGuardarTelefonoClick"
                    style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="Añadir" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font>
            </Button>
            <Button fx:id="btnCancelar" onAction="#onCancelarEdicionClick"
                    text="Cancelar" visible="false"
                    style="-fx-background-color: #FF0000; -fx-text-fill: white; -fx-cursor: hand;" />
        </children>
    </HBox>

    <TableView fx:id="tablaTelefonos" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" maxWidth="60.0" minWidth="50.0" prefWidth="55.0" text="ID" />

            <TableColumn fx:id="colNumero" minWidth="150.0" prefWidth="200.0" text="Número de Teléfono" />

            <TableColumn fx:id="colAcciones" maxWidth="120.0" minWidth="110.0" prefWidth="115.0" text="Acciones" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT">
        <Button mnemonicParsing="false" onAction="#onCerrarClick"
                style="-fx-background-color: #95a5a6; -fx-cursor: hand;" text="Volver" textFill="WHITE" />
    </HBox>
</VBox>